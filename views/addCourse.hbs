<div class="row">
    <main class="col-md-12">
        <h3></br>Add New Course</h3><br>
        <form method="POST" action="/courses/add">
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                    <div class="form-group">
                        <label>Course Code:</label>
                        <input class="form-control" name="courseCode" type="text" />
                    </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label >Course Description:</label>
                            <input class="form-control" name="courseDescription" type="text"  />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Add Course" /><br /><br /><br />
        </form>
    </main>
</div>